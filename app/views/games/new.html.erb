<h1>Welcome to the longest world game!</h1>
<h2>Here is your grid:</h2>
<%= @letters %>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="hidden" name="grid" value="<%= @letters %>">
  <input type="text" name="word" placeholder="Your word here...">
  <input type="submit" name="fodase" value="Test your word">
</form>
